<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Page6Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@id/footer"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#FAFAFA"
                android:gravity="center"
                >

                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login_button"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:id="@+id/searchbar">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/Search"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="#99595A"
                        android:id="@+id/search"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textColor="#99595A"
                        android:background="null"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/search"
                        android:layout_marginLeft="5dp"
                        android:textSize="17dp"
                        />


                </RelativeLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:layout_toRightOf="@id/searchbar"
                    android:background="@drawable/scan"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="35dp"
                    />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_below="@id/header"
                android:orientation="horizontal"
                android:background="@drawable/rectangle"
                android:backgroundTint="#FAFAFA"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_margin="3dp"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/shop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#99595A"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button3"
                    android:text="Style"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#99595A"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button3"
                    android:text="Sports"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#99595A"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/button3"
                    android:layout_margin="3dp"
                    android:text="Auto"
                    android:textColor="#99595A"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:background="@drawable/button3"
                    android:text="Music"
                    android:textColor="#99595A"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="260dp"
                        android:layout_weight="2"
                        android:layout_margin="1dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:src="@drawable/post1" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/Gallery"
                            app:tint="@color/white"
                            android:layout_gravity="top|right"
                            android:layout_margin="6dp"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:layout_margin="1dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/post12"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:clickable="true"
                            android:scaleType="centerCrop"
                            android:background="@drawable/post3"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post6"
                        android:layout_margin="1dp"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post2"
                        android:layout_margin="1dp"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ck"
                        android:layout_margin="1dp"
                        android:clickable="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post4"
                        android:layout_margin="1dp"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post7"
                        android:layout_margin="1dp"
                        android:clickable="true"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post5" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/Gallery"
                            app:tint="@color/white"
                            android:layout_gravity="top|right"
                            android:layout_margin="6dp"/>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="260dp"
                        android:layout_margin="1dp"
                        android:clickable="true"
                        android:layout_weight="2"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#d9d9d9"
        android:layout_above="@id/footer"
        android:id="@+id/line"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home3"
            app:tint="#955a5b"
            android:scaleType="centerInside"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/search2"
            app:tint="#955a5b"
            android:scaleType="centerInside"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/tab3"
            android:scaleType="centerInside"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/tab4"
            android:scaleType="centerInside"
            android:clickable="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/pfp"
            android:layout_weight="1"
            android:layout_marginTop="-3dp"
            android:layout_gravity="center"
            android:clickable="true"/>


    </LinearLayout>

</RelativeLayout>