<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Page7Activity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#FAFAFA"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:background="@drawable/login_button"
            android:backgroundTint="#EAEAEA"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:id="@+id/searchbar">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/search2"
                android:layout_centerVertical="true"
                android:backgroundTint="#939393"
                android:layout_marginLeft="5dp"
                android:id="@+id/search"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sonny"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/search"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:background="@drawable/exit"
                android:layout_marginTop="11dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:clickable="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:clickable="true"
            android:layout_toRightOf="@id/searchbar"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/opensans"
            android:textColor="#936671"
            android:layout_marginTop="38dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rectangle"
        android:layout_below="@id/header"
        android:id="@+id/options"
        android:weightSum="4"
        android:orientation="horizontal"
        android:gravity="center_vertical|center"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:fontFamily="@font/opensans"
                android:textFontWeight="700"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/black"/>
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accounts"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textFontWeight="700"
            android:textColor="#A3A3A3"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tags"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textFontWeight="700"
            android:textColor="#A3A3A3"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Places"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textFontWeight="700"
            android:textColor="#A3A3A3"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/options"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/pfp"
                android:src="@drawable/sonny"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:civ_border_color="#F3F3F3"
                app:civ_border_width="1dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny"
                    android:textColor="#B8B8B8"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pfp2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:civ_border_color="#F3F3F3"
                app:civ_border_width="1dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny_raspberry"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny_raspberry"
                    android:textColor="#B8B8B8"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pfp3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:civ_border_color="#F3F3F3"
                app:civ_border_width="1dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny_strawberry"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny_strawberry"
                    android:textColor="#B8B8B8"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pfp4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:civ_border_color="#5A8D01"
                app:civ_border_width="4dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny_rabbit"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonny_rabbit"
                    android:textColor="#B8B8B8"
                    android:fontFamily="@font/opensans"
                    android:textFontWeight="600"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>