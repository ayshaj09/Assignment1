<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Page9Activity"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#FAFAFA">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_arrow"
            android:backgroundTint="#9A5A5B"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            android:clickable="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pfp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/sonny"
            android:layout_toEndOf="@id/back"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sonny"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans"
            android:textSize="18dp"
            android:textFontWeight="500"
            android:layout_toEndOf="@id/pfp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"/>

        <ImageView
            android:id="@+id/call"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/call"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="32dp"/>

        <ImageView
            android:id="@+id/info"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/info"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="31dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:49 PM"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:layout_marginTop="650dp"
        android:textSize="12dp"
        android:id="@+id/time"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/textbox"
        android:text="Hello!!"
        android:gravity="center"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:fontFamily="@font/opensans"
        android:layout_below="@id/time"
        android:id="@+id/text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:background="@drawable/page9_textbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/camera2"
            android:id="@+id/camera"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message..."
            android:background="null"
            android:textColor="#969696"
            android:fontFamily="@font/opensans"
            android:textSize="15dp"
            android:layout_toRightOf="@id/camera"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/pg9icons"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


</RelativeLayout>