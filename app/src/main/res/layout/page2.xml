<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Page2Activity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:layout_above="@id/profile"
        android:layout_centerHorizontal="true"
        android:textColor="#914042"
        android:textSize="60dp"
        android:textFontWeight="500"
        android:letterSpacing="-0.06"
        android:fontFamily="@font/opensans"
        android:layout_marginBottom="35dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pfp"
        android:layout_centerInParent="true"
        android:id="@+id/profile"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aysha_j"
        android:layout_below="@id/profile"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_button"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Log in"
        android:textColor="@color/white"
        android:id="@+id/loginbutton"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:clickable="true"
        android:backgroundTint="#9a5a5b"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch accounts"
        android:layout_below="@id/loginbutton"
        android:layout_centerHorizontal="true"
        android:textColor="#976266"
        android:textSize="17dp"
        android:textFontWeight="700"
        android:id="@+id/switchtext"
        android:letterSpacing="-0.04"
        android:fontFamily="@font/opensans"
        android:layout_marginTop="25dp"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottom"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_square_24"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="#bca2a2"
            android:textSize="14sp"
            android:fontFamily="@font/opensans"
            android:textFontWeight="600"/>

        <TextView
            android:id="@+id/signuptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up"
            android:textColor="#914042"
            android:textSize="14sp"
            android:fontFamily="@font/opensans"
            android:textFontWeight="700"
            android:clickable="true"/>
    </LinearLayout>





</RelativeLayout>